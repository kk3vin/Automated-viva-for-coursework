<h1>List of questions</h1>
{{#questions}}
    <div class="card mt-2 mb-2">
        <div class="card-body">
            <p>{{question}}</p>
            <input type="button" class="btn edit_question btn-primary" value="Edit question" onclick="location.href='{{editurl}}?questionid={{id}}&courseid={{courseid}}'">
            <input type="button" class="question{{id}} btn btn-danger question_delete_button" value="Delete question">
        </div>
    </div>
{{/questions}}
<hr>
<input type="button" class="btn btn-primary" value="View available submission" onclick="location.href='{{viewrecordurl}}?courseid={{courseid}}'">
<input type="button" class="btn btn-primary" value="Oral exam setting" onclick="location.href='{{settingurl}}?courseid={{courseid}}'">
<input type="button" class="btn btn-primary" value="Create question" onclick="location.href='{{editurl}}?courseid={{courseid}}'">
<input type="button" class="btn btn-primary" value="Cancel" onclick="location.href='{{courseurl}}?id={{courseid}}'">
